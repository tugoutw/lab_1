<%= form_for(card) do |f| %>
  <% if card.errors.any? %>
      <div id="error_explanation" class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form">
  <div class="form-group" >
    <!--修改為用下拉的方式，並自動帶入名稱支付點數,說明,卡片圖片-->
    <%= f.label :卡片號碼, class:"control-label" %>

    <%= f.text_field :card_id ,class:"form-control",placeholder:"請輸入卡片號碼"%>
<!--
    <%= f.select :card_id, ['1-001','2-001'],class:"dropdown-menu"%>
-->
  </div>

  <div class="form-group">
    <%= f.label :卡片名稱, class:"control-label"  %>
    <%= f.text_field :card_name ,class:"form-control",placeholder:"請輸入卡片名稱"%>
  </div>
  <div class="form-group">
    <%= f.label :支付點數, class:"control-label"  %>
    <%= f.text_field :cost ,class:"form-control",placeholder:"請輸入卡片消耗數"%>
  </div>

  <div class="form-group">
    <%= f.label :卡片說明, class:"control-label"  %>
    <%= f.text_area :card_desc ,class:"form-control", placeholder:"請輸入卡片敘述"%>
  </div>

  <div class="from-group" style="padding-bottom:20px">
    <label>選擇卡片圖片</label>
    <%= f.file_field :card_img %>
  <!--預覽圖的呈現-->
  </div>

    <div class="from-group" style="padding-bottom:20px">
    <%= image_tag card.card_img %>
  </div>

  <div class="from-group">
  <div class="actions">
    <%= f.submit "完成",:class => 'btn btn-default' %>
    <%= link_to '回上一頁', cards_path ,:class => 'btn btn-default' %>

  </div>
  </div>

</div>
<% end %>
